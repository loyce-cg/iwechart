{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "lib": ["dom", "es2016", "es2017.object"],
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "out",
        "allowUnreachableCode": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
